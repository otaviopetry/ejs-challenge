<%- include("partials/header") -%>

<main id="homePage">
    <div class="container">
        <h1 class="page-title">Minha jornada profissional</h1>
        
        <% data.reverse().forEach( function (post) { %>
            
            <div class="entry">
                <h2><%= post.title %></h2>
                <div class="content">
                    <%= post.content.substring(0, 100) + " ..."; %>
                    <a href="/entries/<%= post._id %>" title="Ler mais">Ler mais</a>
                </div>
                <hr> 
            </div>
                   

        <% }) %>


    </div>
</main>

<%- include("partials/footer") -%>